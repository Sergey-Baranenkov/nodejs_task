{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./build",
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "types": ["node", "jest"]
  },
  "include": [
    ".",
    "node_modules/@types/jest/index.d.ts",
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ]
}
